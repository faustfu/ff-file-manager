<form action="<%= publicHostUrl %>/api/file" method="POST" enctype="multipart/form-data">
  <div class="row">
    <label for="title">标题</label>
    <input type="text" name="title" id="title" value="" placeholder="请输入档案标题">
    <input type="file" name="file" id="files" accept="image/*" required>
  </div>
  <div class="row">
    <input type="submit" value="上传">
    <input type="reset"><br>
  </div>
  <div class="row">
    <img class="preview" id="image" />
  </div>
</form>
<script>
  document.getElementById("files").onchange = function () {
    var reader = new FileReader();

    reader.onload = function (e) {
        // get loaded data and render thumbnail.
        document.getElementById("image").src = e.target.result;
    };

    // read the image file as a data URL.
    reader.readAsDataURL(this.files[0]);
  };
</script>
